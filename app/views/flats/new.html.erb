<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto"">
      <h1>Add your flat</h1>
      <div class="flat-form mt-3">
        <%= simple_form_for @flat do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>