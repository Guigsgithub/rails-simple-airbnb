<div class="navbar bg-dark text-white">
  <h2>Simple Airbnb</h2>
  <%= link_to 'Add Flat', new_flat_path, class: "btn btn-primary" %>
</div>
<div class="container">
  <h1 class="mt-2">All our Flats (<%= @flats.count %>)</h1>
  <div class="cards d-flex flex-wrap">
    <% @flats.each do |flat| %>
      <div class= "col-4 mt-2"> 
        <div class="bg-light">
          <h3 class="card-title">
            <%= flat.name %>
          </h3>
          <p class="card-text">
            <%= flat.address %><br/>
            <i class="fas fa-users"></i> <%= flat.number_of_guests %>
            <i class="fas fa-euro-sign"></i><%= flat.price_per_night %>
          </p>
      </div>
      <div class="card-header">
        <a href="#">More info</a>
      </div>
      </div>
    <% end %>
  </div>
</div>